<%- include('layout', { body: `
    <section class="hero">
      <h2>Discover & Share Logo Designs</h2>
      <p>Browse thousands of logos for inspiration or upload your own designs.</p>
      <div class="hero-actions">
        <a href="/logos" class="btn btn-primary">Browse Logos</a>
        <a href="/logos/upload" class="btn btn-secondary">Upload Logo</a>
      </div>
    </section>
    
    <section class="search-section">
      <h3>Find Logo Inspiration</h3>
      <form action="/logos/search" method="GET" class="search-form">
        <input type="text" name="q" placeholder="Search by keyword, style, or industry...">
        <button type="submit" class="btn btn-primary">Search</button>
      </form>
    </section>
    
    <section class="featured-logos">
      <h3>Featured Logos</h3>
      <div class="logo-grid">
        <!-- This will be populated with the latest logos -->
        <p>Loading featured logos...</p>
      </div>
    </section>
    ` }) %>
    