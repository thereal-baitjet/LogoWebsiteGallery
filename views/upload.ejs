cat > views/upload.ejs << 'EOF'
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Upload Logo - Logo Inspiration Gallery</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <div class="container">
      <h1><a href="/">Logo Inspiration Gallery</a></h1>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/logos">Browse Logos</a></li>
          <li><a href="/logos/upload">Upload Logo</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main class="container">
    <div class="content">
      <section class="upload-section">
        <h2>Upload a Logo</h2>
        <p>Share your logo design with the community for inspiration.</p>
        
        <form action="/logos" method="POST" enctype="multipart/form-data" class="upload-form">
          <div class="form-group">
            <label for="title">Logo Title *</label>
            <input type="text" id="title" name="title" required>
          </div>
          
          <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="4"></textarea>
          </div>
          
          <div class="form-group">
            <label for="tags">Tags (comma separated)</label>
            <input type="text" id="tags" name="tags" placeholder="e.g., minimalist, blue, tech">
          </div>
          
          <div class="form-group">
            <label for="uploadedBy">Your Name</label>
            <input type="text" id="uploadedBy" name="uploadedBy" placeholder="Anonymous">
          </div>
          
          <div class="form-group file-upload">
            <label for="logo">Logo File *</label>
            <input type="file" id="logo" name="logo" accept="image/*" required>
            <p class="file-help">Accepted formats: JPG, PNG, GIF, SVG (max 5MB)</p>
          </div>
          
          <div class="form-actions">
            <button type="submit" class="btn btn-primary">Upload Logo</button>
            <a href="/logos" class="btn btn-secondary">Cancel</a>
          </div>
        </form>
      </section>
    </div>
    
    <aside class="ad-panel">
      <h3>Sponsored</h3>
      <div class="ad-container">
        <!-- Ad content will go here -->
        <div class="ad-placeholder">
          <p>Advertisement</p>
        </div>
        <div class="ad-placeholder">
          <p>Advertisement</p>
        </div>
      </div>
    </aside>
  </main>

  <footer>
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> Logo Inspiration Gallery. All rights reserved.</p>
    </div>
  </footer>

  <script src="/js/main.js"></script>
</body>
</html>
EOF
